<!-- Прелоадер скрипт -->
<script>
  const jingleAudio = new Audio('/assets/audio/jingle.mp3');

  function hidePreloader() {
    document.getElementById('preloader').style.display = 'none';
    document.querySelector('.header-info').style.display = 'flex';
    document.querySelector('.custom-audio-player').style.display = 'flex';
  }

  window.addEventListener('load', function() {
    jingleAudio.play();
    setTimeout(hidePreloader, 15000);
  });
</script>

