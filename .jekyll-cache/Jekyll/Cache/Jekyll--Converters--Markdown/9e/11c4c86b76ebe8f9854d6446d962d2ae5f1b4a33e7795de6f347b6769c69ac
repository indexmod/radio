    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  /* Прелоадер */
  .preloader {
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  /* Анимация текста прелоадера */
  .preloader-content span {
    font-family: "Georgia", serif;
    font-size: 100px;
    color: white;
    animation: fadeInOut 15s forwards;
  }

  /* Анимация для появления и исчезновения */
  @keyframes fadeInOut {
    0% { opacity: 0; }
    33% { opacity: 1; }
    66% { opacity: 1; }
    100% { opacity: 0; }
  }

  /* Настройка кастомного аудиоплеера в одну линию */
  .custom-audio-player {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 5px;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 5px;
  }

  .progress-container {
